{% set baseUrl = app.request.baseUrl %}
{%
set lookups = lookupGetter.rows({
    'address': null,
    'tel': null,
    'icp': null,
    'site.name': null
})
%}
<!DOCTYPE html>
<html lang="{{ app.language }}">
    <head>
        <meta charset="{{ app.charset }}"/>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {{ html.csrfMetaTags | raw }}
        {% block stylesheets %}
            <link rel="Stylesheet" type="text/css" href="{{ baseUrl }}/css/application.css" />
            <link rel="stylesheet" href="{{ baseUrl }}/css/ie.css" />
        {% endblock %}
        <title>{% if pageTitle is defined %}{{ pageTitle }}_{% endif %}{{ lookups['site.name'] }}</title>
        <meta name="description" content="{% if pageDescription is defined %}{{ pageDescription }}{% endif %}" />
        <meta name="keywords"  content="{% if pageKeywords is defined %}{{ pageKeywords }}{% endif %}" />
    </head>
    <body>
        <div id="page">
            <div id="page-hd">
                <div id="header"></div>
                <div id="main-menu">
                    {% set mainMenus = [
                        {
                            'url': app.homeUrl,
                            'label': '首页',
                            'active': controllerId == 'site' and actionId == 'index',
                        },
                        {
                            'url': url('news/index', {'node': 1}),
                            'label': '公司介绍',
                            'active': controllerId == 'news' and actionId == 'index' and nodeValue == 1,
                        },
                        {
                            'url': url('news/index', {'node': 2}),
                            'label': '注册公司',
                            'active': controllerId == 'news' and actionId == 'index' and nodeValue == 2,
                        },
                        {
                            'url': url('news/index', {'node': 2}),
                            'label': '工商代办',
                            'active': controllerId == 'news' and actionId == 'index' and nodeValue == 2,
                        },
                        {
                            'url': url('news/index', {'node': 2}),
                            'label': '工商转让',
                            'active': controllerId == 'news' and actionId == 'index' and nodeValue == 2,
                        },
                        {
                            'url': url('news/index', {'node': 2}),
                            'label': '会计服务',
                            'active': controllerId == 'news' and actionId == 'index' and nodeValue == 2,
                        },
                        {
                            'url': url('news/index', {'node': 2}),
                            'label': '财务外包',
                            'active': controllerId == 'news' and actionId == 'index' and nodeValue == 2,
                        },
                        {
                            'url': url('news/index', {'node': 2}),
                            'label': '社保代理',
                            'active': controllerId == 'news' and actionId == 'index' and nodeValue == 2,
                        },
                        {
                            'url': url('news/index', {'node': 2}),
                            'label': '代理公积金',
                            'active': controllerId == 'news' and actionId == 'index' and nodeValue == 2,
                        },
                        {
                            'url': url('news/index', {'node': 2}),
                            'label': '许可资质',
                            'active': controllerId == 'news' and actionId == 'index' and nodeValue == 2,
                        },
                        {
                            'url': url('news/index', {'node': 2}),
                            'label': '商标注册',
                            'active': controllerId == 'news' and actionId == 'index' and nodeValue == 2,
                        },
                        {
                            'url': url('news/index', {'node': 2}),
                            'label': 'POS 机代理',
                            'active': controllerId == 'news' and actionId == 'index' and nodeValue == 2,
                        },
                        {
                            'url': url('page/index', {'alias': 'contact-us'}),
                            'label': '联系我们',
                            'active': controllerId == 'page' and actionId == 'index' and alias == 'contact-us',
                        },
                    ] %}
                    <ul>
                        {% for item in mainMenus %}
                            <li><a href="{{ item.url }}" class="{{ item.active ? 'on' : '' }}">{{ item.label }}</a></li>
                            {% endfor %}
                    </ul>
                </div>
            </div>
            <div id="page-bd">
                <div id="slides"></div>
                {% block content %}
                {% endblock %}
            </div>
            <div id="page-ft">
                <footer>
                    <div id="footer">
                        <p>
                            <span>地址：{{ lookupGetter.one('address') }}</span>
                            <span>电话：{{ lookupGetter.one('tel') }}</span>
                        </p>
                        <p>
                            <span>Copyright &copy; {{ now | date('Y') }} 版权所有</span>
                            <span>ICP：{{ lookups.icp }}</span>
                        </p>
                    </div>
                </footer>
            </div>
        </div>
        <script type="text/javascript" src="{{ staticUrl }}/js/jquery-1.7.2.min.js"></script>
        <script type="text/javascript" src="{{ staticUrl }}/js/application.js"></script>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>

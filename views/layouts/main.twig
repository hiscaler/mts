{% set baseUrl = request.baseUrl %}
{%
set lookups = lookupGetter.rows({
    'address': null,
    'tel': null,
    'icp': null,
    'site.name': null,
    'meta.keywords': null,
    'meta.description': null,
})
%}
<!DOCTYPE html>
<html lang="{{ app.language }}">
    <head>
        <meta charset="{{ app.charset }}"/>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {{ html.csrfMetaTags | raw }}
        {% block stylesheets %}
            <link rel="Stylesheet" type="text/css" href="{{ baseUrl }}/css/application.css" />
            <!--[if lt IE 8]><link rel="stylesheet" href="{{ baseUrl }}/css/ie.css" type="text/css" media="screen, projection"><![endif]-->
        {% endblock %}
        <title>{% if pageTitle is defined %}{{ pageTitle }}_{% endif %}{{ lookups['site.name'] }}</title>
        <meta name="description" content="{% if pageDescription is defined and pageDescription is not empty %}{{ pageDescription }}{% else %}{{ lookups['meta.description'] }}{% endif %}" />
        <meta name="keywords" content="{% if pageKeywords is defined and pageKeywords is not empty %}{{ pageKeywords }}{% else %}{{ lookups['meta.keywords'] }}{% endif %}" />
    </head>
    <body>
        <div id="page">
            {% include '@app/views/blocks/header.twig' %}
            <div id="page-bd" class="clearfix">
                <div id="slides"></div>
                <div id="page-inner">
                    <div id="page-inner-left">
                        {% include '@app/views/blocks/sidebar.twig' %}
                    </div>
                    <div id="page-inner-right">
                        <div id="page-inner-title">
                            {{ currentNodeName }}
                        </div>
                        <div id="page-inner-body">
                            {% block content %}
                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
            {% include '@app/views/blocks/footer.twig' %}
        </div>
        <script type="text/javascript" src="{{ baseUrl }}/js/jquery-1.7.2.min.js"></script>
        <script type="text/javascript" src="{{ baseUrl }}/js/application.js"></script>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
